<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MRZScannerForms"
             x:Class="MRZScannerForms.MainPage"
             Title="MRZSampleApp">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Image x:FieldModifier="Public" x:Name="imgResult" Aspect="AspectFit" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="10" />
        <StackLayout Grid.Row="1" HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand">
            <Button Text="Start MRZ Scanner" HorizontalOptions="Center" VerticalOptions="Center" Clicked="btnStartScanning_Clicked" />
            <Button Text="Passport Image Capture" HorizontalOptions="Center" Margin="0,8,0,0" VerticalOptions="Center" Clicked="btnCaptureImage_Clicked" />
        </StackLayout>
    </Grid>
</ContentPage>
